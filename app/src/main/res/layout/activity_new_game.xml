<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
                android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".NewGameActivity"
                android:background="@color/bgcolor">

    <TextView
        android:id="@+id/new_game_title"
        android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:textSize="@dimen/thirty_six_dp"
      android:textColor="@color/red"
      android:text="Join a side"
      android:layout_marginTop="@dimen/eighty_dp"
      android:layout_centerHorizontal="true" />

  <LinearLayout
      android:layout_width="fill_parent"
      android:layout_height="wrap_content"
      android:layout_centerInParent="true"
      android:orientation="horizontal">
    <ImageView
        android:id="@+id/select_left_image_view"
        android:layout_width="wrap_content"
        android:layout_height="210dp"
        android:layout_weight=".5"
        android:src="@drawable/left" />
    <ImageView
        android:id="@+id/select_right_image_view"
        android:layout_width="wrap_content"
        android:layout_height="210dp"
        android:layout_weight=".5"
        android:src="@drawable/right" />
  </LinearLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Start"
        android:id="@+id/finishButton"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal"
        android:textColor="@color/red"
        android:background="@color/transparent"
        android:layout_marginBottom="@dimen/one_hundred_dp"
        android:textSize="@dimen/thirty_six_dp"/>
</RelativeLayout>